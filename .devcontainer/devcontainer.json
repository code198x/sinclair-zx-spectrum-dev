{
  "name": "ZX Spectrum Development Environment",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Assembly language support
        "13xforever.language-x86-64-assembly",
        // Z80 syntax highlighting
        "tlgkccampbell.code-quickstart",
        // BASIC syntax
        "rohinivsenthil.qbasic",
        // Git integration
        "eamodio.gitlens",
        // File utilities
        "ritwickdey.LiveServer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.asm": "asm-collection",
          "*.inc": "asm-collection",
          "*.bas": "basic"
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "files.eol": "\n"
      }
    }
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "postCreateCommand": "welcome",
  "remoteUser": "root"
}
